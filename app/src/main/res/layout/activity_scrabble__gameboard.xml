<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Scrabble_Gameboard"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="bottom">
        <TextView
            android:id="@+id/round_number_text"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textAlignment="center"
            tools:text="1. Kör"
            android:textSize="30dp">

        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/player_name_text"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textAlignment="center"
            tools:text = "1.     Player1"
            android:textSize="25sp"
            android:gravity="center">
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <EditText
            android:id="@+id/actual_point"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:inputType="numberDecimal"
            android:hint="Játékos pontszáma">
        </EditText>
        <Button
            android:id="@+id/add_point"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Pontszám+">
        </Button>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Játékosok:"
            android:textStyle="bold"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/player1_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:textAlignment="center"
            tools:text="Player1"
            android:textSize="20dp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/player2_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:textAlignment="center"
            tools:text="Player2"
            android:textSize="20dp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/player3_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:textAlignment="center"
            tools:text="Player3"
            android:textSize="20dp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/player4_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:textAlignment="center"
            tools:text="Player4"
            android:textSize="20dp"
            android:gravity="center"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="bottom">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jelenlegi pontok:"
            android:textStyle="bold"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/player1_point"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:textAlignment="center"
            tools:text="50"
            android:textSize="20dp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/player2_point"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:textAlignment="center"
            tools:text="32"
            android:textSize="20dp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/player3_point"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:textAlignment="center"
            tools:text="67"
            android:textSize="20dp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/player4_point"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:textAlignment="center"
            tools:text="85"
            android:textSize="20dp"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Előzmények:"
            android:textStyle="bold"
            android:gravity="bottom">
        </TextView>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/player_points_dinamically"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </ScrollView>
</LinearLayout>